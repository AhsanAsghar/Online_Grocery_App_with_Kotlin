<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".personal_data"
        android:background="#2196F3"
>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Personal Data"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"

    />
    <EditText
            android:id="@+id/personaldata_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Name"
            android:drawableStart="@drawable/ic_action_username"
            android:drawablePadding="8dp"
            android:textSize="25dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="120dp"
            android:drawableLeft="@drawable/ic_action_username"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:layout_below="@+id/personaldata_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_texts"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="8dp"
        android:hint="Password"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/re_enter_password"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/password"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_texts"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="8dp"
        android:hint="Re-Enter Password"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/re_enter_password"
        android:background="@drawable/add_to_cart_green_button"
        android:padding="15dp"
        android:textSize="20sp"
        android:elevation="4dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="Next" />

</RelativeLayout>