<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2196F3"
        tools:context=".biodata_of_deliveryperson">

    <TextView
        android:id="@+id/delivery_person_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:text="Please enter your details"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/bike_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/delivery_person_title"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_texts"
        android:drawableLeft="@drawable/ic_action_motorcycle"
        android:drawablePadding="8dp"
        android:hint="Bike Number"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/lisence_number"
        android:layout_width="550dp"
        android:layout_height="48dp"
        android:layout_below="@+id/bike_number"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_texts"
        android:drawableLeft="@drawable/ic_action_cnic"
        android:drawablePadding="8dp"
        android:hint="Lisence Number"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/deliverperson_email"
        android:layout_width="550dp"
        android:layout_height="48dp"
        android:layout_below="@+id/lisence_number"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_texts"
        android:drawableLeft="@drawable/ic_action_email"
        android:drawablePadding="8dp"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/delivery_bio_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/deliverperson_email"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/roundedbutton"
        android:text="Next"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>