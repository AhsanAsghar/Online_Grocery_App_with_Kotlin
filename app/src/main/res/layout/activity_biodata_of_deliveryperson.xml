<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2196F3"
        tools:context=".biodata_of_deliveryperson">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BioData of DeliveryPerson"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"

    />
    <EditText
            android:id="@+id/bike_number"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_action_motorcycle"
            android:drawablePadding="8dp"
            android:layout_height="60dp"
            android:hint="Bike Number"
            android:textSize="25dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="120dp"
    />
    <EditText
            android:id="@+id/lisence_number"
            android:layout_width="550dp"
            android:drawableLeft="@drawable/ic_action_cnic"
            android:drawablePadding="8dp"
            android:layout_height="60dp"
            android:hint="Lisence Number"
            android:textSize="25dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/bike_number"
            android:layout_marginTop="20dp"
    />

    <EditText
            android:id="@+id/deliverperson_email"
            android:layout_width="550dp"
            android:layout_height="60dp"
            android:hint="Email Address"
            android:drawableLeft="@drawable/ic_action_email"
            android:drawablePadding="8dp"
            android:textSize="25dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/lisence_number"
            android:layout_marginTop="20dp"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="25dp"
        android:textStyle="bold"
        android:padding= "20dp"
        android:layout_marginLeft="260dp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/deliverperson_email"
        />


</RelativeLayout>