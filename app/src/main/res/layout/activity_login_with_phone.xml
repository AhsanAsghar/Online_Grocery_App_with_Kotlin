<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login_with_phone"
android:background="#2196F3"
>
    <EditText
            android:id="@+id/phone_number_customer"
            android:layout_width="550dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/ic_action_callicon"
            android:drawablePadding="8dp"
            android:hint="Phone Number"
            android:textSize="25dp"
            android:padding="15dp"
            android:inputType="phone"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:layout_centerVertical="true"
    />

    <EditText
        android:id="@+id/verfication_field"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_texts"
        android:drawablePadding="8dp"
        android:hint="Verification Code"
        android:inputType="number"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <Button
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/verfication_field"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/add_to_cart_green_button"
        android:elevation="4dp"
        android:text="Verify"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>