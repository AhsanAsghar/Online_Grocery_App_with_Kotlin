<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".personal_data"
        android:background="#2196F3"
>

    <TextView
        android:id="@+id/description_customer_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:text="Enter Personal Data"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/personaldata_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_texts"
        android:drawableStart="@drawable/ic_action_username"
        android:drawableLeft="@drawable/ic_action_username"
        android:drawablePadding="8dp"
        android:hint="Name"
        android:padding="15dp"
        android:layout_below="@+id/description_customer_data"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="550dp"
        android:layout_height="48dp"
        android:layout_below="@+id/personaldata_name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_texts"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="8dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/re_enter_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/password"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_texts"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="8dp"
        android:hint="Re-Enter Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/re_enter_password"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/add_to_cart_green_button"
        android:elevation="4dp"
        android:padding="15dp"
        android:text="Next"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>