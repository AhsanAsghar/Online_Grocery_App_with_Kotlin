<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".personal_data"
        android:background="#2196F3"
>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Personal Data"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"

    />
    <EditText
            android:id="@+id/personaldata_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Name"
            android:drawableStart="@drawable/ic_action_username"
            android:drawablePadding="8dp"
            android:textSize="25dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="120dp"
            android:drawableLeft="@drawable/ic_action_username"/>
    <EditText
            android:id="@+id/personaldata_address"
            android:layout_width="550dp"
            android:layout_height="60dp"
            android:hint="Address"
            android:textSize="25dp"
            android:drawableLeft="@drawable/ic_action_address"
            android:drawablePadding="8dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/personaldata_name"
            android:layout_marginTop="20dp"
    />

    <EditText
            android:id="@+id/personaldata_cnic"
            android:layout_width="550dp"
            android:layout_height="60dp"
            android:hint="CNIC"
            android:textSize="25dp"
            android:drawableLeft="@drawable/ic_action_cnic"
            android:drawablePadding="8dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/personaldata_address"
            android:layout_marginTop="20dp"
    />
   <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/personal_data_floating_button"
           android:layout_alignParentBottom="true"
           android:layout_alignParentRight="true"
           android:layout_marginBottom="50dp"
           android:layout_marginRight="30dp"
           app:fabCustomSize="64dp"
           app:maxImageSize="48dp"
           android:backgroundTint="#000000"

   />

</RelativeLayout>