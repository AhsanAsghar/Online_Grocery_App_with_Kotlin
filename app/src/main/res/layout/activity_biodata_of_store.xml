<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".biodata_of_store"
        android:background="#2196F3">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter BioData of Store"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"

    />
    <EditText
            android:id="@+id/store_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Name of Store"
            android:drawableLeft="@drawable/ic_action_shop"
            android:drawablePadding="8dp"
            android:textSize="25dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="120dp"
    />
    <EditText
            android:id="@+id/store_address"
            android:layout_width="550dp"
            android:layout_height="60dp"
            android:hint="Address of Store"
            android:textSize="25dp"
            android:drawableLeft="@drawable/ic_action_address"
            android:drawablePadding="8dp"
            android:padding="15dp"

            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/store_name"
            android:layout_marginTop="20dp"
    />

    <EditText
            android:id="@+id/store_email"
            android:layout_width="550dp"
            android:layout_height="60dp"
            android:hint="Email Addess"
            android:drawableLeft="@drawable/ic_action_email"
            android:drawablePadding="8dp"
            android:textSize="25dp"
            android:padding="15dp"
            android:textColor="@android:color/black"
            android:background="@drawable/edit_texts"
            android:layout_marginHorizontal="20dp"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/store_address"
            android:layout_marginTop="20dp"
    />
    <Spinner
            android:layout_width="match_parent"
            android:background="@drawable/edit_texts"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp"
            android:id="@+id/storetype_spinner"
            android:layout_below="@+id/store_email"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:padding="15dp"

    />
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/storetype_spinner"
            android:layout_marginTop="20dp"
            android:src="@android:color/white"
    />
    <ImageButton
            android:id="@+id/store_pic_addpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_additems"
            android:background="#2196F3"
            android:layout_below="@+id/storetype_spinner"
            android:layout_marginTop="70dp"
            android:scaleX="3"
            android:scaleY="3"
            android:layout_marginLeft="300dp"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding= "20dp"
            android:layout_marginLeft="260dp"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/store_pic_addpic"
    />
</RelativeLayout>