<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/item_photo_in_store_profile_items"
            android:layout_width="40dp"
            android:layout_height="76dp"
            android:layout_gravity="start|left"
            android:layout_weight="1"
            app:srcCompat="@drawable/detergent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_for_store_profile_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:text="Store Name"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/price_for_store_profile_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="300Rs"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/delete_items_in_store_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/dustbin" />

    </androidx.cardview.widget.CardView>
</LinearLayout>